{
    "name": "lampager/lampager-idiorm",
    "description": "Rapid pagination for Idiorm and Paris",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "mpyw",
            "email": "ryosuke_i_628@yahoo.co.jp"
        }
    ],
    "keywords": ["laravel", "illuminate", "pagination", "paginator", "offset", "limit"],
    "autoload": {
        "psr-4": {
            "Lampager\\Idiorm\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Lampager\\Idiorm\\Tests\\": "tests/"
        },
        "files": ["tests/polyfill.php"]
    },
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "lampager/lampager": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.7",
        "nilportugues/sql-query-formatter": "^1.2.2",
        "j4mie/idiorm": "^1.5",
        "j4mie/paris": "^1.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
